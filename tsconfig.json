{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/component/Hero/Hero.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
